<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mejora a Premium"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTrialInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tienes un periodo de prueba gratuito de 7 días."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textWelcome" />

    <TextView
        android:id="@+id/textFeatures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Con Premium obtienes:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textTrialInfo" />

    <TextView
        android:id="@+id/textFeaturesList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="8dp"
        android:text="✓ Estadísticas avanzadas\n✓ Exportación a Excel\n✓ Presupuestos ilimitados\n✓ Sin anuncios\n✓ Sincronización en la nube"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/textFeatures" />

    <Button
        android:id="@+id/buttonMonthly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Mensual: $3.99/mes"
        app:layout_constraintTop_toBottomOf="@+id/textFeaturesList" />

    <Button
        android:id="@+id/buttonYearly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Anual: $29.99/año"
        app:layout_constraintTop_toBottomOf="@+id/buttonMonthly" />

    <Button
        android:id="@+id/buttonLifetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="De por vida: $49.99"
        app:layout_constraintTop_toBottomOf="@+id/buttonYearly" />

</androidx.constraintlayout.widget.ConstraintLayout>